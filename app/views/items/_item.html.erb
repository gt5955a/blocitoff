<% @user.items.each do |item| %>
  <div class="media" id="<%= item.id %>">
    <div class="media-body">
      <h4 class="media-heading">
        <p><%= item.name %>
        <%= link_to "", item, method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %></p>
      </h4>
      <small>
        <%= "#{distance_of_time_in_words(Time.now, item.created_at + 7.days)} before deletion" %>
      </small>
    </div>
  </div>
<% end %>
